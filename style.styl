// global-reset()
// reset-html5()
// normalize-html5()
normalize-base()
 
// Settings
$line-height-ratio  = 1.75
$header-ratio       = $octave
$body-font          = $verdana
$body-font-weight   = 300
$body-color         = #555
$header-font        = $courier
$header-font-weight = 500
$header-color       = #444
$min-font           = 12px
$max-font           = 20px
$min-width          = 600px
$max-width          = 1140px
$vertical-rhythm    = false

$Frijole = 'Frijole', cursive
$Cabin = 'Cabin Sketch', cursive
grid-overlay(gray, 0)

  
typographic()

$h = vr-block(5, .195)
// edit()
// my own mixins
heads-p-pad(val)
    h1, h2, h3, h4, h5, h6, p
        padding-left val
        padding-right val

header-font(val)
    header
        h1, h2, h3, h4, h5, h6
            font-family val
// use them
header-font($Frijole) 
heads-p-pad(1.1rem)      

a  
    text-decoration none
    outline 0
    color  rgba(51, 51, 51, 0.54)
    position relative
    bottom 0
    transition color .1s
    transition bottom .1s
    &:hover
        color rgba(51, 51, 51, 0.8)
        bottom 1px
 
    
body 
    // +tablet()
    //     padding 0
    +above(800px)
        padding 10px 0
   
       
    .container
        background #00EDFF
        box-shadow 0 0 3px #333
        center(1024px)
        // +tablet()
        //     width 100%
        //     max-width 800px
        // +mobile()
        //     width 100%
        //     max-width 468px
        main
            #left 
                col(2/3, gutter: 0)
                +mobile()
                    stack()
            aside
                col(1/3, gutter: 0)
                background  rgba(0, 0, 0, 0.03)
                +mobile()
                    stack()
                .widget-box
                    margin-bottom 1rem
                    text-align center
                    &:last-of-type
                        margin-bottom 0
                        border-bottom: 1px dashed rgba(52, 87, 57, 0.14);
                    ul
                        t-reset()
                        margin-bottom 10px
                        li
                            list-style none
                p
                    cf()
                    text-align left
                    padding-top 2em 
                    &:first-of-type
                        padding 1rem 0
                        margin-bottom: 1rem;
                        border-bottom: 1px dashed rgba(52, 87, 57, 0.14);
                        img
                            display: block;
                            margin: 0 auto;
                            height $h
                    span
                        span(1/3)
                        i
                            font-size 2rem
                            color #345739
    header 
        col(1, cycle: 1)
        overflow hidden
        cf()
        h1#header-img 
            image: '../test_resources/img/header.jpg'
            background-size cover
            color #345739
            // width 1024px
            // height 200px
            +tablet()
                image: '../test_resources/img/header_t.jpg'
                // width 100%
                // max-width 800px
                // height vr-block(4)
            +mobile()
                image: '../test_resources/img/header_mb.jpg'
                // width 100%
                // background-size cover
                // max-width 468px
                // height vr-block(2)
        h4
            background  rgba(0, 0, 0, 0.05)
    
  
    
   // comma list mixin
        inline-list()
            li
                display inline

        comma-list()
            inline-list()
            li
                &:after
                    content ', '
                &:last-child:after
                    content ''

           
